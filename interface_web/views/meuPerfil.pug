extends layoutAutenticado
block content
    .w3-card-4.modal(id='display')
    .w3-container(style="display: flex;")
        .w3-container(style="width: 150%;")
            .w3-container(align="left" style=' background-color: #d9d9d9; border-bottom: 5px solid #990000')
                table(style="width:100%")
                    tr
                        //td
                            .w3-container
                                img(src='/images/prometeu.jpg' style='width:250px; height:350px; border: 10px solid transparent; border-color: #990000;')
                        td
                            .w3-container(style="padding-bottom:10em; margin-left:50px;")
                                table.w3-table
                                    tr
                                        td  
                                            font(size="7") 
                                                b Prometeu Carvalho 
                                    tr
                                        td 
                                            font(size="3") 
                                                b Mestrado Integrado em Engenharia Informática
                        td
                            button.button01(onclick="updateUser('a3333@alunos.uminho.pt')" style="margin-top:300px; float:right; width:150px; height:50px;") 
                                center
                                    b Alterar Dados
                        
            if(lista.length > 0)
                hr
            each pub in lista
                center
                    .w3-container(style = 'width:38%; border-width:2px; background-color:white; border-style:double; border-color:#990000; text-align:left;')
                        .w3-container(style = 'float: left;')
                            b= pub.nomeUser
                        .w3-container(style = 'float: right;')
                            b= pub.data
                        hr(style="border-color: #990000;")
                        center
                            text= pub.conteudo
                        if (pub.files.length > 0)
                            hr(style="border-color: #990000;")
                            b Ficheiros Publicados
                            each f in pub.files
                                ul
                                    li
                                        a(href='download/' + f._id +"/" + f.name)= f.name
                    p
            else 
                center
                    hr
                    font(size="6.5") 
                        b Ainda sem publicações
                    hr
    
        .w3-container(style="flex-grow: 1;")    
            include chat
    style.
            .dropdown {
                float: left;
                overflow: hidden;
            }
            
            .dropdown .dropbtn {
                font-size: 16px;  
                border: none;
                outline: none;
                color: white;
                padding: 14px 16px;
                background-color: inherit;
                font-family: inherit;
                margin: 0;
            }
            
            .navbar a:hover, .dropdown:hover .dropbtn {
                background-color: red;
            }
            
            .dropdown-content {
                display: none;
                position: absolute;
                background-color: #f9f9f9;
                min-width: 160px;
                box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                z-index: 1;
            }
            
            .dropdown-content a {
                float: none;
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }
            
            .dropdown-content a:hover {
                background-color: #ddd;
            }
            
            .dropdown:hover .dropdown-content {
                display: block;
            }